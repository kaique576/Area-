Algoritmo "Carteira_Hab"

Var  idade: inteiro
 ano_atual:inteiro
 ano_nasc:inteiro


Inicio
      Escreval("Em que ano estamos ?")
      Leia(ano_atual)
      Escreval("em que voce nasceu ?")
      Leia(ano_nasc)
      idade <- ano_atual - ano_nasc
      Escreval("A sua idade é ", idade)
      Se(idade >= 18) entao
       Escreval("Voce pode tirar a sua habilitação")
       Senao
       Escreval("Nao pode tirar a habilitação")
        Fimse
Fimalgoritmo
